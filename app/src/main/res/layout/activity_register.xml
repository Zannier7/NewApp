<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:layout_width="105dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true">
        <EditText
            android:id="@+id/birthday_reg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edit"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:hint="Fecha_Nacimiento"
            android:inputType="datetime"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/correo_reg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edit"
            android:ems="10"
            android:hint="Email "
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/pass_reg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_edit"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/name_reg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_edit"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />


        <EditText
            android:id="@+id/apellidos_reg"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="186dp"
            android:background="@drawable/rounded_edit"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />



    </LinearLayout>



    <Button
        android:id="@+id/button_reg"
        android:layout_width="104dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@color/facebookBlue"
        android:elevation="55dp"
        android:text="Registrarse"
        android:textAllCaps="false"
        android:textColor="@color/com_facebook_button_text_color" />



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/atrasM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="21dp"
        android:layout_marginRight="29dp"
        android:clickable="true"
        app:backgroundTint="@color/colorAccent"
        android:src="@drawable/back"/>

</RelativeLayout>